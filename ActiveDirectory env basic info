#Information about ActiveDirectory domain 

Import-module ActiveDirectory

Write-Output "Basic info about Acvive Directory domain";
 
$ADDomain = @{}
$ADDomain.DCcontainer = (Get-ADDomain).computerscontainer
$ADDomain.DomainMode = (Get-ADDomain).domainmode
$ADDomain.InfrastructureMaster = (Get-ADDomain).infrastructuremaster
$ADDomain.ReplicationServer = (Get-ADDomain).replicadirectoryservers
$ADDomain.DomainNamingMaster = (Get-ADForest).DomainNamingMaster
$ADDomain.GlobalCatalogs = (Get-ADForest).DomainNamingMaster
$ADDomain.ForestMode = (Get-ADForest).ForestMode
$ADDomain.SchemaMaster = (Get-ADForest).SchemaMaster
$ADDomain.RIDMaster = (Get-ADForest).RIDMaster
$ADDomain.LockoutDuration  = (Get-ADDefaultDomainPasswordPolicy).LockoutDuration 
$ADDomain.MaxPasswordAge = (Get-ADDefaultDomainPasswordPolicy).MaxPasswordAge
$ADDomain.MinPasswordLength = (Get-ADDefaultDomainPasswordPolicy).MinPasswordLength


$ADDomain
